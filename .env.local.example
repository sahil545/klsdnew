# WordPress/WooCommerce API Configuration
# Copy this file to .env.local and fill in your actual values

# Your WordPress site URL (without trailing slash)
NEXT_PUBLIC_WORDPRESS_URL=https://your-wordpress-site.com
WORDPRESS_URL=https://your-wordpress-site.com

# WordPress admin credentials for REST API access
WORDPRESS_USERNAME=your_admin_username
WORDPRESS_PASSWORD=your_admin_password

# Optional: WordPress API key for custom endpoints (set in functions.php)
WORDPRESS_API_KEY=your_custom_api_key

# Optional: WooCommerce API credentials (if you prefer API keys over username/password)
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret_here

# Development settings
NEXT_PUBLIC_DEV_MODE=true
